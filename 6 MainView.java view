    public void iniciar() {
        ConsoleUtils.mostrarTitulo("SISTEMA DE GERENCIAMENTO DE PROJETOS E EQUIPES");
        System.out.println("Sistema completo de gerenciamento com hierarquia de usuÃ¡rios,");
